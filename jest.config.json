{
    "testEnvironment": "node",
    "collectCoverageFrom": [
        "src/**/*.js",
        "!src/**/*.test.js",
        "!src/**/*.spec.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
        "text",
        "lcov",
        "html"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 70,
            "functions": 70,
            "lines": 70,
            "statements": 70
        }
    },
    "testMatch": [
        "**/tests/**/*.test.js",
        "**/tests/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
        "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 10000
}