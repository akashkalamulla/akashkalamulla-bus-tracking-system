{
    "testEnvironment": "node",
    "collectCoverageFrom": [
        "src/**/*.js",
        "!src/**/*.test.js",
        "!src/**/*.spec.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
        "text",
        "lcov",
        "html",
        "json"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 45,
            "functions": 45,
            "lines": 45,
            "statements": 45
        }
    },
    "testMatch": [
        "**/tests/**/*.test.js",
        "**/tests/**/*.spec.js",
        "**/__tests__/**/*.test.js",
        "**/__tests__/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
        "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 10000,
    "verbose": true,
    "forceExit": true,
    "detectOpenHandles": true
}