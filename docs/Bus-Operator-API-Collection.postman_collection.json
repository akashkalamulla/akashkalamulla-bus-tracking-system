{
  "info": {
    "name": "Bus Operator API Testing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    { "key": "baseUrl", "value": "https://zcmux4xvg0.execute-api.ap-south-1.amazonaws.com/dev" },
    { "key": "authToken", "value": "Bearer " },
    { "key": "testBusId", "value": "" }
  ],
  "item": [
    {
      "name": "Setup & Authentication",
      "item": [
        {
          "name": "1. Register Operator",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testoperator123\",\n  \"password\": \"securepass123\",\n  \"email\": \"testop@buscompany.com\",\n  \"role\": \"BUS_OPERATOR\",\n  \"name\": \"Test Operator\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/auth/register", "host": ["{{baseUrl}}"], "path": ["auth","register"] }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Registration successful', function () {",
                  "    pm.response.to.have.status(201);",
                  "    pm.expect(pm.response.json()).to.have.property('success', true);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "2. Login Operator",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testoperator123\",\n  \"password\": \"securepass123\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth","login"] }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Login successful', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('success', true);",
                  "    pm.expect(response).to.have.property('token');",
                  "    // Save token to collection variable (API returns token at top level: response.token)",
                  "    if (response && response.token) {",
                  "        pm.collectionVariables.set('authToken', 'Bearer ' + response.token);",
                  "        console.log('Token saved: ' + response.token);",
                  "    } else {",
                  "        console.log('Token not found in response. Response keys:', Object.keys(response));",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Bus Management",
      "item": [
        {
          "name": "1. Get All Buses",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "{{authToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/operator/buses", "host": ["{{baseUrl}}"], "path": ["operator","buses"] }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Get buses successful', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('success', true);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "2. Create New Bus",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "{{authToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"busNumber\": \"TEST-{{$randomInt}}\",\n  \"capacity\": 40,\n  \"routeId\": \"R001\",\n  \"status\": \"ACTIVE\",\n  \"model\": \"Test Bus Model\",\n  \"year\": 2024\n}"
            },
            "url": { "raw": "{{baseUrl}}/operator/buses", "host": ["{{baseUrl}}"], "path": ["operator","buses"] }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Bus created successfully', function () {",
                  "    pm.response.to.have.status(201);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('success', true);",
                  "    // Save BusID for later requests (response.BusID)",
                  "    if (response && response.BusID) {",
                  "        pm.collectionVariables.set('testBusId', response.BusID);",
                  "        console.log('Bus ID saved: ' + response.BusID);",
                  "    } else {",
                  "        console.log('BusID not found in response: ', response);",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "3. Get Bus Details",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "{{authToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/operator/buses/{{testBusId}}", "host": ["{{baseUrl}}"], "path": ["operator","buses","{{testBusId}}"] }
          },
          "response": []
        }
      ]
    }
  ]
}
