{
    "name": "bus-tracking-system",
    "version": "1.0.0",
    "description": "Real-time bus tracking and route management system",
    "main": "src/index.js",
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
        "dev": "npx sls offline start",
        "test": "jest --passWithNoTests",
        "test:ci": "jest --coverage --passWithNoTests --watchAll=false",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src/ tests/",
        "lint:ci": "eslint src/ tests/ --max-warnings 0",
        "lint:fix": "eslint src/ tests/ --fix",
        "format": "prettier --write src/ tests/",
        "format:check": "prettier --check src/ tests/",
        "type-check": "echo 'No TypeScript files to check'",
        "build": "echo 'No build step required for serverless'",
        "deploy:dev": "npx sls deploy --stage dev --region ${AWS_REGION:-us-east-1}",
        "deploy:staging": "npx sls deploy --stage staging --region ${AWS_REGION:-us-east-1}",
        "deploy:prod": "npx sls deploy --stage prod --region ${AWS_REGION:-us-east-1}",
        "remove:dev": "npx sls remove --stage dev --region ${AWS_REGION:-us-east-1}",
        "remove:staging": "npx sls remove --stage staging --region ${AWS_REGION:-us-east-1}",
        "remove:prod": "npx sls remove --stage prod --region ${AWS_REGION:-us-east-1}",
        "seed:data": "node scripts/seed-data.js",
        "generate-data": "node scripts/generate-data.js",
        "load-data": "node scripts/load-data.js",
        "generate-and-load": "npm run generate-data && npm run load-data",
        "generate-and-load:local": "npm run generate-data && npm run load-data -- --local",
        "load-data:local": "npm run load-data -- --local",
        "load-data:dev": "npm run load-data -- --stage dev",
        "load-data:staging": "npm run load-data -- --stage staging",
        "load-data:prod": "npm run load-data -- --stage prod",
        "test-load-data": "node scripts/test-load-data.js",
        "dynamodb:install": "npx sls dynamodb install",
        "dynamodb:start": "npx sls dynamodb start",
        "dynamodb:seed": "npx sls dynamodb seed",
        "api-keys": "node scripts/get-api-keys.js",
        "api-keys:dev": "node scripts/get-api-keys.js dev ap-south-1",
        "api-keys:staging": "node scripts/get-api-keys.js staging ap-south-1",
        "api-keys:prod": "node scripts/get-api-keys.js prod ap-south-1",
        "test:rate-limiting": "node scripts/test-rate-limiting.js",
        "test:rate-limiting:dev": "node scripts/test-rate-limiting.js dev ap-south-1",
        "test:rate-limiting:staging": "node scripts/test-rate-limiting.js staging ap-south-1",
        "test:rate-limiting:prod": "node scripts/test-rate-limiting.js prod ap-south-1",
        "ci": "npm run lint:ci && npm run test:ci",
        "precommit": "npm run lint:fix && npm run format",
        "docs:validate": "swagger-cli validate openapi.yaml",
        "docs:serve": "redoc-cli serve openapi.yaml --watch",
        "docs:build": "redoc-cli build openapi.yaml --output docs/api-docs.html",
        "docs:swagger": "npx http-server docs -p 8080 -o swagger.html",
        "prepare": "npm run build"
    },
    "dependencies": {
        "@aws-sdk/client-dynamodb": "^3.901.0",
        "@aws-sdk/lib-dynamodb": "^3.901.0",
        "bcryptjs": "^3.0.2",
        "http-status-codes": "^2.3.0",
        "ioredis": "^5.8.0",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "ngeohash": "^0.6.3",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@apidevtools/swagger-cli": "^4.0.4",
        "@faker-js/faker": "^10.0.0",
        "eslint": "^8.52.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.32.0",
        "http-server": "^14.1.1",
        "jest": "^29.7.0",
        "prettier": "^3.0.3",
        "redoc-cli": "^0.13.21",
        "serverless": "^3.35.0",
        "serverless-dynamodb-local": "^0.2.40",
        "serverless-offline": "^13.9.0",
        "supertest": "^6.3.4",
        "swagger-ui-dist": "^5.29.4"
    },
    "keywords": [
        "serverless",
        "aws",
        "lambda",
        "dynamodb",
        "redis",
        "bus-tracking",
        "real-time"
    ],
    "author": "AKASH",
    "license": "MIT"
}
