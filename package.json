{
    "name": "bus-tracking-system",
    "version": "1.0.0",
    "description": "Real-time bus tracking and route management system",
    "main": "src/index.js",
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
        "dev": "sls offline start",
        "test": "jest --passWithNoTests",
        "test:ci": "jest --coverage --passWithNoTests --watchAll=false",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src/ tests/",
        "lint:ci": "eslint src/ tests/ --max-warnings 0",
        "lint:fix": "eslint src/ tests/ --fix",
        "format": "prettier --write src/ tests/",
        "format:check": "prettier --check src/ tests/",
        "type-check": "echo 'No TypeScript files to check'",
        "build": "echo 'No build step required for serverless'",
        "deploy:dev": "sls deploy --stage dev --region ${AWS_REGION:-us-east-1}",
        "deploy:staging": "sls deploy --stage staging --region ${AWS_REGION:-us-east-1}",
        "deploy:prod": "sls deploy --stage prod --region ${AWS_REGION:-us-east-1}",
        "remove:dev": "sls remove --stage dev --region ${AWS_REGION:-us-east-1}",
        "remove:staging": "sls remove --stage staging --region ${AWS_REGION:-us-east-1}",
        "remove:prod": "sls remove --stage prod --region ${AWS_REGION:-us-east-1}",
        "seed:data": "node scripts/seed-data.js",
        "dynamodb:install": "sls dynamodb install",
        "dynamodb:start": "sls dynamodb start",
        "dynamodb:seed": "sls dynamodb seed",
        "ci": "npm run lint:ci && npm run test:ci",
        "precommit": "npm run lint:fix && npm run format",
        "prepare": "npm run build"
    },
    "dependencies": {
        "@aws-sdk/client-dynamodb": "^3.0.0",
        "@aws-sdk/lib-dynamodb": "^3.0.0",
        "http-status-codes": "^2.3.0",
        "ioredis": "^5.3.2",
        "joi": "^17.13.3",
        "ngeohash": "^0.6.3",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "eslint": "^8.52.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.32.0",
        "jest": "^29.7.0",
        "prettier": "^3.0.3",
        "serverless": "^3.35.0",
        "serverless-dynamodb-local": "^0.2.40",
        "serverless-offline": "^13.9.0",
        "supertest": "^6.3.4"
    },
    "keywords": [
        "serverless",
        "aws",
        "lambda",
        "dynamodb",
        "redis",
        "bus-tracking",
        "real-time"
    ],
    "author": "AKASH",
    "license": "MIT"
}